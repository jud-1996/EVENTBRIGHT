<% provide(:title, "Signup") %>
<!DOCTYPE html>
<html>
    <head>
        <title><% yield(:title) %></title>    
    </head>
    <body>
      <h1>Sign Up </h1>
      <p>This is a sign up page for new users </p>
          
          
          
          <%= form_for(@user) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          
          <%= f.label :email %>
          <%= f.email_field :email %>
          
          <%= f.label :password %>
          <%= f.password_field :password %>
          
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>
          
          <%= f.submit "Create my account" %>
          <% end %>
         
          
    </body>
</html>
